var f: Text;
var a,b,c: string;
Assign(f,'D:\proba.txt');
Reset(f);
Readln(f,a);
Readln(f,b);
Readln(f,c);
Close(f);
PrintLn(a);
PrintLn(b);
PrintLn(c);
